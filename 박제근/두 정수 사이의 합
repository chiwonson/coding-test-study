class Solution {
    public long solution(int a, int b) {
        long answer = 0;
        long x = 0;
        
        if(a>b){
            for(int i=b; i<=a; i++){
               x += i;
               answer = x;
            }
        }else if(a<b){
            for(int i=a; i<=b; i++){
                x += i;
                answer = x;
            }
        }else if(a==b){
                answer = a;
            }               
        return answer;
    }
}
